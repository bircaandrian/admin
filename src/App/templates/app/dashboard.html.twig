{% extends '@layout/default.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div><!--/.row-->

    {{ messagesPartial('partial::alerts', {dismissible: true}) }}

    <div class="row">
        <div class="col-xl-3 col-lg-6 col-md-12">
            <div class="card card-blue">
                <div class="row no-gutters">
                    <div class="col-lg-5 col-md-3 widget-left">
                        <i class="fa fa-shopping-bag fa-3x"></i>
                    </div>
                    <div class="col-lg-7 col-md-9 widget-right">
                        <div class="large">120</div>
                        <div class="text-muted">New Orders</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <div class="card card-orange">
                <div class="row no-gutters">
                    <div class="col-lg-5 col-md-3 widget-left">
                        <i class="fa fa-comments fa-3x"></i>
                    </div>
                    <div class="col-lg-7 col-md-9 widget-right">
                        <div class="large">52</div>
                        <div class="text-muted">Comments</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <div class="card card-teal">
                <div class="row no-gutters">
                    <div class="col-lg-5 col-md-3 widget-left">
                        <i class="fa fa-user-plus fa-3x"></i>
                    </div>
                    <div class="col-lg-7 col-md-9 widget-right">
                        <div class="large">24</div>
                        <div class="text-muted">New Users</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-6 col-md-12">
            <div class="card card-red">
                <div class="row no-gutters">
                    <div class="col-lg-5 col-md-3 widget-left">
                        <i class="fa fa-eye fa-3x"></i>
                    </div>
                    <div class="col-lg-7 col-md-9 widget-right">
                        <div class="large">25.2k</div>
                        <div class="text-muted">Page Views</div>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Site Traffic Overview</div>
                <div class="card-body">
                    <div class="canvas-wrapper">
                        <canvas class="main-chart" id="line-chart" height="200" width="600"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-xl-3 col-6">
            <div class="card">
                <div class="card-body easypiechart-panel">
                    <h4>New Orders</h4>
                    <div class="easypiechart" id="easypiechart-blue" data-percent="92"><span class="percent">92%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-6">
            <div class="card">
                <div class="card-body easypiechart-panel">
                    <h4>Comments</h4>
                    <div class="easypiechart" id="easypiechart-orange" data-percent="65"><span
                                class="percent">65%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-6">
            <div class="card">
                <div class="card-body easypiechart-panel">
                    <h4>New Users</h4>
                    <div class="easypiechart" id="easypiechart-teal" data-percent="56"><span class="percent">56%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-6">
            <div class="card">
                <div class="card-body easypiechart-panel">
                    <h4>Visitors</h4>
                    <div class="easypiechart" id="easypiechart-red" data-percent="27"><span class="percent">27%</span>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-8">

            <div class="card chat">
                <div class="card-header" id="accordion">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chat-dots" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
                        <path d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                    </svg>
                    Chat
                </div>
                <div class="card-body">
                    <ul>
                        <li class="left clearfix">
								<span class="chat-img float-left">
									<img src="https://placehold.it/80/30a5ff/fff" alt="User Avatar" class="rounded-circle"/>
								</span>
                            <div class="chat-body clearfix">
                                <div class="header">
                                    <strong class="primary-font">John Doe</strong>
                                    <small class="text-muted">32 mins ago</small>
                                </div>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ante turpis, rutrum
                                    ut ullamcorper sed, dapibus ac nunc. Vivamus luctus convallis mauris, eu gravida
                                    tortor aliquam ultricies.
                                </p>
                            </div>
                        </li>
                        <li class="right clearfix">
								<span class="chat-img float-right">
									<img src="https://placehold.it/80/dde0e6/5f6468" alt="User Avatar"
                                         class="rounded-circle"/>
								</span>
                            <div class="chat-body clearfix">
                                <div class="header">
                                    <strong class="float-left primary-font">Jane Doe</strong>
                                    <small class="text-muted">6 mins ago</small>
                                </div>
                                <p>
                                    Mauris dignissim porta enim, sed commodo sem blandit non. Ut scelerisque sapien eu
                                    mauris faucibus ultrices. Nulla ac odio nisl. Proin est metus, interdum scelerisque
                                    quam eu, eleifend pretium nunc. Suspendisse finibus auctor lectus, eu interdum
                                    sapien.
                                </p>
                            </div>
                        </li>
                        <li class="left clearfix">
								<span class="chat-img float-left">
									<img src="https://placehold.it/80/30a5ff/fff" alt="User Avatar" class="rounded-circle"/>
								</span>
                            <div class="chat-body clearfix">
                                <div class="header">
                                    <strong class="primary-font">John Doe</strong>
                                    <small class="text-muted">32 mins ago</small>
                                </div>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ante turpis, rutrum
                                    ut ullamcorper sed, dapibus ac nunc. Vivamus luctus convallis mauris, eu gravida
                                    tortor aliquam ultricies.
                                </p>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="card-footer">
                    <div class="input-group">
                        <input id="btn-input-message" type="text" class="form-control input-md"
                               placeholder="Type your message here..."/>
                        <span class="input-group-btn">
								<button class="btn btn-success btn-md" id="btn-chat">Send</button>
							</span>
                    </div>
                </div>
            </div>

        </div><!--/.col-->

        <div class="col-lg-4">

            <div class="card card-blue">
                <div class="card-header dark-overlay">
                    <svg class="glyph stroked clipboard-with-paper">
                        <use xlink:href="#stroked-clipboard-with-paper"></use>
                    </svg>
                    To-do List
                </div>
                <div class="card-body">
                    <ul class="todo-list">
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Make a plan for today</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Update Basecamp</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Send email to Jane</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Drink coffee</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Do some work</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                        <li class="todo-list-item">
                            <div class="checkbox">
                                <input class="form-check-input" type="checkbox" id="checkbox"/>
                                <label class="form-check-label" for="checkbox">Tidy up workspace</label>
                            </div>
                            <div class="action-buttons">
                                <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                <a href="#" class="flag"><i class="fas fa-flag"></i></a>
                                <a href="#" class="trash"><i class="fas fa-trash"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <input id="btn-input-task" type="text" class="form-control input-md" placeholder="Add new task"/>
                        <span class="input-group-btn">
								<button class="btn btn-primary btn-md" id="btn-todo">Add</button>
							</span>
                    </div>
                </div>
            </div>

        </div><!--/.col-->
    </div><!--/.row-->
{% endblock %}
